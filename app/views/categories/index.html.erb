<% content_for :title, 'Categories' %>
<div class="container">
  <div class="row-fluid">
    <div class="row-fluid margin-bottom-20">
      <div class="span6">
        <div class="headline"><h3>All Categories</h3></div>
        <table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td style="vertical-align:middle"><%= category.name %></td>
        <!-- <td style="vertical-align:middle"><%= link_to 'Show', category %></td> -->
        <td style="vertical-align:middle"><a class="glyphicons no-js edit" href=<%= edit_category_path(category) %>><i></i>Edit</a></td>
        <td style="vertical-align:middle"><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>
</div>
</div>
</div>
</div>