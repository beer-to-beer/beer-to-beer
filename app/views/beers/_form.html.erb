<div class="row-fluid margin-bottom-10">
  <%= form_for(@beer, html: {class: "reg-page"}) do |f| %>
      <% if @beer.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@beer.errors.count, "error") %> prohibited this beer from being saved:</h2>

            <ul>
              <% @beer.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>

      <div class="field">
        <strong>Category</strong>
        <%= f.fields_for :category do |info| %>
            <%= info.label :name %>
            <%= info.text_field :name %>
        <% end %>
      </div>

      <div class="field">
        <strong>Producer</strong>
        <%= f.fields_for :producer do |info| %>
            <%= info.label :name %>
            <%= info.text_field :name %>
        <% end %>
      </div>
      <div class="field">
        <strong>Image</strong><br>
        <%= f.file_field :imageURL %>
      </div>

      <div class="controls form-inline">
        <%= f.submit class: "btn-u pull-right"%>
      </div>
      </div>
  <% end %>
