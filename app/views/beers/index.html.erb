<% content_for :title, 'Beers' %>

<div class="container">
  <div class="row-fluid">
    <div class="row-fluid margin-bottom-20">
      <div class="booking-blocks">
        <div class="overflow-hidden">

          <div class="headline"><h3>All Beers</h3></div>

          <table class="table table-hover">
            <thead>
            <tr>
              <th>Title</th>
              <th></th>
              <th>Category</th>
              <th></th>
              <th>Producer</th>
            </tr>
            </thead>

            <tbody>
            <% @beers.each do |beer| %>
                <tr>
                  <td style="vertical-align:middle;white-space:nowrap;"><%= beer.title %></td>
                  <td></td>
                  <td style="vertical-align:middle;white-space:nowrap;"><%= beer.category.name %></td>
                  <td></td>
                  <td style="vertical-align:middle;white-space:nowrap;"><%= beer.producer.name %></td>
                  <td width="100%"></td>
                  <% if can? :show, beer %>
                      <td style="vertical-align:middle;white-space:nowrap; ">
                        <a class="btn btn-default btn-sm" href=<%= beer_path(beer) %>><i class="fa fa-search"></i> Show</a>
                      </td>
                  <% else %>
                      <td></td>
                  <% end %>
                  <% if can? :edit, beer %>
                      <td style="vertical-align:middle;white-space:nowrap; ">
                        <a class="btn btn-default btn-sm" href=<%= edit_beer_path(beer) %>><i class="fa fa-pencil"></i>
                          Edit</a>
                      </td>
                  <% else %>
                      <td></td>
                  <% end %>
                  <% if can? :delete, beer %>
                      <td style="vertical-align:middle;white-space:nowrap;">
                        <a class="btn btn-default btn-sm" data-confirm="Are you sure?" data-method="delete" rel="nofollow" href=<%= beer_path(beer) %>><i class="fa fa-trash-o fa-lg"></i>
                          Destroy</a>
                      </td>
                  <% else %>
                      <td></td>

                  <% end %>


                </tr>
            <% end %>
            </tbody>
          </table>

          <br>

          <% if can? :create, Beer %>
              <%= link_to 'New Beer', new_beer_path, {:class => "btn-u btn-large"} %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>