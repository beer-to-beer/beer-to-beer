<% content_for :title, 'Beers' %>
<div class="container">
  <div class="row-fluid">
    <div class="row-fluid margin-bottom-20">
      <div class="span6">
        <div class="headline"><h3>All Beers</h3></div>
        <table class="table table-hover">
          <thead>
          <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Category</th>
            <th>Producer</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @beers.each do |beer| %>
              <tr>
                <td style="vertical-align:middle"><%= image_tag beer.beerURL,size: "700x700" , alt: beer.title %></td>
                <td style="vertical-align:middle"><%= beer.title %></td>
                <td style="vertical-align:middle"><%= beer.category.name %></td>
                <td style="vertical-align:middle"><%= beer.producer.name %></td>
                <% if can? :show, beer %>
                    <td style="vertical-align:middle;white-space:nowrap; ">
                      <a class="btn btn-default btn-sm" href=<%= beer_path(beer) %>><i class="fa fa-search"></i> Show</a>
                    </td>
                <% else %>
                    <td></td>
                <% end %>
                <% if can? :edit, beer %>
                    <td style="vertical-align:middle;white-space:nowrap; ">
                      <a class="btn btn-default btn-sm" href=<%= edit_beer_path(beer) %>><i class="fa fa-pencil"></i>
                        Edit</a>
                    </td>
                <% else %>
                    <td></td>
                <% end %>
                <% if can? :delete, beer %>
                    <td style="vertical-align:middle;white-space:nowrap;" >
                      <a class="btn btn-default btn-sm" data-confirm="Are you sure?" data-method="delete" rel="nofollow" href=<%= beer_path(beer) %>><i class="fa fa-trash-o fa-lg"></i> Destroy</a>
                    </td >
                <% else %>
                    <td></td>

                <% end %>
          <% end %>
          </tbody>
        </table>

        <br>

        <% if can? :create, Beer %>
            <%= link_to 'New Beer', new_beer_path, {:class => "btn-u btn-large"}  %>
        <% end %>
      </div>
    </div>
  </div>
</div>