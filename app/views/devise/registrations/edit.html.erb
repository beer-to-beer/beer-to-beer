<link href="/assets/users.css?body=1" media="all" rel="stylesheet"/>
<div class="body">

    <% content_for :title, 'Edit Profile' %>

    <!--/container-->
  </div>
  <!--/breadcrumbs-->
  <%= bootstrap_devise_error_messages! %>
  <div class="container">
    <div class="row-fluid margin-bottom-10">


      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put,class: "reg-page"}) do |f| %>
          <h3>Edit your Profile</h3>

          <div class="controls">

            <%= f.label :email %>
            <%= f.email_field :email, class: "span12" %>
          </div>

          <div class="controls">
            <div class="span6">
              <%= f.label :password %>

              <%= f.password_field :password, class: "span12", :autocomplete => "off"%>
            </div>
            <div class="span6">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, class: "span12"%>
            </div>
            </div>
            <div class="controls">

              <%= f.label :current_password %>
              <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes', :default => 'we need your current password to confirm your changes') %>)</i>
              <%= f.password_field :current_password, class: "span12"%>
            </div>

          <div class="controls">
            <div class="span6">

              <%= f.label :first_name %>
              <%= f.text_field :first_name, class: "span12" %>
            </div>
            <div class="span6">

              <%= f.label :last_name %>
              <%= f.text_field :last_name, class: "span12" %>
            </div>
            </div>

            <div class="controls">

              <%= f.fields_for :address, @address do |info| %>
                  <div class="fields">
                    <div class="form-group">
                      <%= info.label :city %>
                      <%= info.text_field :city, class: "span12" %>
                    </div>
                    <div class="form-group">
                      <%= info.label :postal_code %>
                      <%= info.text_field :postal_code, class: "span12" %>
                    </div>
                    <div class="form-group">
                      <%= info.label :street %>
                      <%= info.text_field :street, class: "span12" %>
                    </div>
                    <div class="form-group">
                      <%= info.label :house_number %>
                      <%= info.text_field :house_number, class: "span12" %>
                    </div>
                    <div class="form-group">
                      <%= info.label :country %>
                      <%= info.text_field :country, class: "span12" %>
                    </div>

              <% end %>
              </div>


              <%= f.submit t('.update', :default => "Update"), class: "btn-u pull-right" %></div>
      <% end %>

      <div class="glyphicons-demo">
        <a class="glyphicons no-js left_arrow" href=<%= :back %>><i></i>Back</a>
        <a class="glyphicons no-js delete" data-confirm="Are you sure?" data-method="delete" href="/users" rel="nofollow"><i></i>CancelAccount</a>
      </div>
      </div>
    </div>



