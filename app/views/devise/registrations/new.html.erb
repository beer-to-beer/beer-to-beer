<link href="/assets/users.css?body=1" media="all" rel="stylesheet"/>
<div class="body">

  <% content_for :title, 'Registration' %>

  <%= bootstrap_devise_error_messages! %>

  <div class="container">
    <div class="row-fluid">


      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {role: "form", class: "reg-page"}) do |f| %>

          <h3 align="center">Register a new account</h3>
          <hr/>

          <div class="controls">
            <%= f.label :first_name do %>
                First Name<span class="color-red"> *</span>
            <% end %>

            <%= f.text_field :first_name, class: "span12" %>

          </div>
          <div class="controls">
            <%= f.label :last_name do %>
                Last Name<span class="color-red"> *</span>
            <% end %>
            <%= f.text_field :last_name, class: "span12" %>
          </div>
          <div class="controls">

            <%= f.label :email do %>
                Email<span class="color-red"> *</span>
            <% end %>
            <%= f.email_field :email, class: "span12" %>
          </div>
          <div class="controls">
            <div class="span6">

              <%= f.label :password do %>
                  Password<span class="color-red"> *</span>
              <% end %>
              <%= f.password_field :password, class: "span12" %>
            </div>
            <div class="span6">
              <%= f.label :password_confirmation do %>
                  Confirm Password<span class="color-red"> *</span>
              <% end %>
              <%= f.password_field :password_confirmation, class: "span12" %>
            </div>
          </div>

          <div class="controls">

            <%= f.fields_for :address, @address do |info| %>
                <div class="fields">
                  <div class="form-group">
                    <%= info.label :city %>
                    <%= info.text_field :city, class: "span12" %>
                  </div>
                  <div class="form-group">
                    <%= info.label :postal_code %>
                    <%= info.text_field :postal_code, class: "span12" %>
                  </div>
                  <div class="form-group">
                    <%= info.label :street %>
                    <%= info.text_field :street, class: "span12" %>
                  </div>
                  <div class="form-group">
                    <%= info.label :house_number %>
                    <%= info.text_field :house_number, class: "span12" %>
                  </div>
                  <div class="form-group">
                    <%= info.label :country %>
                    <%= info.text_field :country, class: "span12" %>
                  </div>

            <% end %>
            </div>
          </div>

          <hr/>
          <div class="controls form-inline">
            <input type="checkbox">
            <label class="checkbox" style="padding-top: 4.5px; padding-left: 5px">
              I read <a class="color-green">Terms and Conditions</a>
            </label>
            <button class="btn-u pull-right" type="submit">Register</button>
          </div>

      <% end %>
    </div>
  </div>
</div>