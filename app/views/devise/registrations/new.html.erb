<link href="/assets/users.css?body=1" media="all" rel="stylesheet"/>
<div class="body">
  <div class="breadcrumbs margin-bottom-50">
    <div class="container">
      <h1 class="color-green pull-left">Register</h1>
      <ul class="pull-right breadcrumb">
        <li><a href="index.html">Home</a> <span class="divider">/</span></li>
        <li class="active">Login</li>
      </ul>
    </div>
    <!--/container-->
  </div>
  <!--/breadcrumbs-->
  <%= bootstrap_devise_error_messages! %>
  <div class="container">
    <div class="row-fluid margin-bottom-10">


      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {role: "form", class: "reg-page"}) do |f| %>

          <h3>Register a new account</h3>

          <div class="controls">

            <%= f.label :email %>
            <%= f.email_field :email, class: "span12" %>
          </div>
          <div class="controls">
            <div class="span6">

              <%= f.label :password %>
              <%= f.password_field :password, class: "span12" %>
            </div>
            <div class="span6">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, class: "span12" %>
            </div>
          </div>
          <div class="controls">
            <div class="span6">

              <%= f.label :first_name %>
              <%= f.text_field :first_name, class: "span12" %>
            </div>
            <div class="span6">

              <%= f.label :last_name %>
              <%= f.text_field :last_name, class: "span12" %>
            </div>
            </div>
            <div class="controls">

              <%= f.fields_for :address, @address do |info| %>
                  <div class="fields">
                    <div class="form-group">
                      <%= info.label :city %>
                      <%= info.text_field :city, class: "span12" %>
                    </div>
                    <div class="form-group">
                      <%= info.label :postal_code %>
                      <%= info.text_field :postal_code, class: "span12" %>
                    </div>
                    <div class="form-group">
                      <%= info.label :street %>
                      <%= info.text_field :street, class: "span12" %>
                    </div>
                    <div class="form-group">
                      <%= info.label :house_number %>
                      <%= info.text_field :house_number, class: "span12" %>
                    </div>
                    <div class="form-group">
                      <%= info.label :country %>
                      <%= info.text_field :country, class: "span12" %>
                    </div>

              <% end %>
              </div>
            </div>



            <%= f.submit t('.sign_up', :default => "Sign up"), class: "btn-u pull-right" %>
      <% end %>
      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
