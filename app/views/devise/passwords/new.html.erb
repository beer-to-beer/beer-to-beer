<link href="/assets/users.css?body=1" media="all" rel="stylesheet"/>
<div class="body">
  <div class="breadcrumbs margin-bottom-50">
    <div class="container">
      <h1 class="color-green pull-left">Password reset</h1>
      <ul class="pull-right breadcrumb">
        <li><a href="index.html">Home</a> <span class="divider">/</span></li>
        <li class="active">Password reset</li>
      </ul>
    </div>
    <!--/container-->
  </div>
  <!--/breadcrumbs-->
  <div class="container">
    <div class="row-fluid">

      <%= bootstrap_devise_error_messages! %>

      <h3>Forgot your Password?</h3>


      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post, role: "form", class: "reg-page"}) do |f| %>

          <div class="controls">

            <%= f.label :email %>
            <%= f.email_field :email, class: "span12" %>
          </div>


          <%= f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), class: "btn-u pull-right" %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

