<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div>
      <div class="row-fluid margin-bottom-10">
        <div class="span12 bg-light">
          <div>
            <%= f.label :title %>
            <%= f.text_field :title %><br>
            <p>Date</p>
            <%= f.date_select :sdate %><br>
            <p>Time</p>
            <%= f.time_select :sdate, :ignore_date => true %><br>

            <p>Flyer</p>
            <%= f.file_field :imageURL %><br>

            <%= f.label :club_id %>
            <% if current_user %>
                <% if current_user.has_role? :admin %>
                    <%= f.collection_select :club_id, Club.all, :id, :name,
                            if (params[:club_id])
                              {selected: params[:club_id] }
                            else
                              {selected: @event.club_id}
                            end
                    %>
                <% else %>
                    <%= f.collection_select :club_id, Club.where(:user_id => current_user.id), :id, :name , if (params)
                                                                                                              {selected: params[:club_id] }
                                                                                                            else
                                                                                                              {selected: @event.club.id}
                                                                                                            end  %>
                <% end %>
            <% end %><br>
            <div class="actions">
              <%= f.submit class: "btn-u btn-large" %>
            </div>

          </div>
        </div>
      </div>
    </div>
<% end %>
