<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :sdate %><br>
    <%= f.datetime_select :sdate %>
  </div>
  <div class="field">
    <%= f.label :imageURL %><br>
    <%= f.file_field :imageURL %>
  </div>
  <div class="field">
    <%= f.label :club_id %><br>
    <% if current_user %>
        <% if current_user.has_role? :admin %>
            <%= f.collection_select :club_id, Club.all, :id, :name, { selected: params[:club_id] } %>
        <% else %>
            <%= f.collection_select :club_id, Club.where(:user_id => current_user.id), :id, :name , { selected: params[:club_id] } %>
        <% end %>
    <% end %>

  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
