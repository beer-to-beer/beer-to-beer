<li class="dropdown">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
    Optionen
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
    <li role="presentation"><a role="menuitem" tabindex="-1" href="#"><%= link_to "Edit Profile",edit_user_registration_path%></a></li>
    <% if Club.find_by_user_id(User.find_by_email(current_user.email)).nil? %>
        <li role="presentation"><a role="menuitem" tabindex="-1" href="#"><%= link_to new_club_path, "Create Club"%></a></li>
    <% else %>
        <li role="presentation"><a role="menuitem" tabindex="-1" href="#"><%= link_to "Show Club",  club_path(Club.find_by_user_id(User.find_by_email(current_user.email)).id) %></a></li>
        <li role="presentation"><a role="menuitem" tabindex="-1" href="#"><%= link_to "Edit Club",  edit_club_path(Club.find_by_user_id(User.find_by_email(current_user.email)).id) %></a></li>
        <li role="presentation"><a role="menuitem" tabindex="-1" href="#"><%= link_to "Show Events",  events_path %></a></li>

    <% end %>
    <li role="presentation"><a role="menuitem" tabindex="-1" href="#"><%= link_to "Sign out", destroy_user_session_path, method: "delete" %></a></li>
  </ul>
</li>