<h1>Listing clubs</h1>
<% if current_user %>
    <% if current_user.has_role? :admin %>

        <% @clubs_activ.each do |a| %>

            <%=a.name %>   <%= link_to 'aktivate', :method => activate(a.id) %>


        <% end %>
    <% end %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clubs.each do |club| %>
      <tr>
        <td><%= club.name %></td>
        <td><%= club.url %></td>
        <td><%= "#{User.find_by(club.user_id).first_name},  #{User.find_by(club.user_id).last_name}" %></td>
        <td><%= link_to 'Show', club %></td>
        <td><%= link_to 'Edit', edit_club_path(club) %></td>
        <td><%= link_to 'Destroy', club, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Club', new_club_path %>
