<% content_for :title, 'Clubs' %>

<div class="container">
  <div class="row-fluid">
    <div class="row-fluid margin-bottom-20">
      <div class="span6">
        <div class="headline"><h3>All Clubs</h3></div>
        <% if current_user %>
            <% if current_user.has_role? :admin %>
                <% if @clubs_activ.count == 0 %>
                    <div>Currently all clubs are activated.</div>
                <% else %>
                    <table class="table table-hover">
                      <thead>
                      <tr>
                        <th>Name</th>
                        <th></th>
                      </tr>
                      </thead>
                      <tbody>
                      <% @clubs_activ.each do |a| %>
                          <tr>
                            <td>
                              <%= a.name %>
                            </td>
                            <td>
                              <%= link_to("activate", edit_club_path(a, :active => true)) %>
                            </td>
                          </tr>
                      <% end %>
                      </tbody>
                    </table>
                <% end %>
            <% end %>
        <% end %>
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Name</th>
            <th>Url</th>
            <th>User</th>
            <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
          <% @clubs.each do |club| %>
              <tr>
                <td><%= club.name %></td>
                <td><%= club.url %></td>
                <td><%= "#{club.user.first_name},  #{club.user.last_name}" %></td>
                <td>
                  <% if can? :show, club %>
                      <%= link_to 'Show', club %>
                  <% end %></td>
                <td>
                  <% if can? :edit, club %>
                      <%= link_to 'Edit', edit_club_path(club) %>
                  <% end %></td>
                <td>
                  <% if can? :delete, club %>
                      <%= link_to 'Destroy', club, method: :delete, data: {confirm: 'Are you sure?'} %>
                  <% end %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
        <br>
        <% if can? :create, Club %>
            <%= link_to 'New Club', new_club_path, {:class => "btn btn-large btn-u-yellow btn-block btn-primary"} %>
        <% end %>
      </div>

    </div>
  </div>
</div>