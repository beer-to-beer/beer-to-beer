<%= form_for(@club) do |f| %>
  <% if @club.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@club.errors.count, "error") %> prohibited this club from being saved:</h2>

      <ul>
      <% @club.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row-fluid">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
    <div class="field">
      <%= f.fields_for :address do |info| %>
          <div class="form-group">
            <%= info.label :city %>
            <%= info.text_field :city%>
          </div>
          <div class="form-group">
            <%= info.label :postal_code %>
            <%= info.text_field :postal_code%>
          </div>
          <div class="form-group">
            <%= info.label :street %>
            <%= info.text_field :street %>
          </div>
          <div class="form-group">
            <%= info.label :house_number %>
            <%= info.text_field :house_number %>
          </div>
          <div class="form-group">
            <%= info.label :country %>
            <%= info.text_field :country %>
          </div>
        <% end %>
    </div>
  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :beer %> <br>
    <%= f.collection_check_boxes :beer_ids, Beer.all, :id, :title, {selected: @club.beers.map(&:id), include_hidden: false }, multiple: true , class: "checkbox inline"%>
  </div>
  <div class="actions">

    <%= f.submit class: "btn-u btn-u-green btn-large"%>
  </div>
<% end %>
