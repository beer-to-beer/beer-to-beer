<h1>Listing shop_beers</h1>

<table>
  <thead>
    <tr>
      <th>Shop</th>
      <th>Beer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shop_beers.each do |shop_beer| %>
      <tr>
        <td><%= shop_beer.shop %></td>
        <td><%= shop_beer.beer %></td>
        <td><%= link_to 'Show', shop_beer %></td>
        <td><%= link_to 'Edit', edit_shop_beer_path(shop_beer) %></td>
        <td><%= link_to 'Destroy', shop_beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

