<% content_for :title, 'Producers' %>
<div class="container">
  <div class="row-fluid">
    <div class="row-fluid margin-bottom-20">
      <div class="span6">
        <div class="headline"><h3>All Producers</h3></div>
        <table class="table table-hover">
          <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @producers.each do |producer| %>
              <tr>
                <td style="vertical-align:middle"><%= producer.name %></td>
                <td style="vertical-align:middle"><%= link_to 'Show', producer %></td>
                <td style="vertical-align:middle"><a class="glyphicons no-js edit" href=<%= edit_producer_path(producer) %>><i></i>Edit</a></td>
                <td style="vertical-align:middle"><%= link_to 'Destroy', producer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Producer', new_producer_path %>
      </div>
    </div>
  </div>
</div>
