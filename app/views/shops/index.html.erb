<% content_for :title, 'Shop' %>

<div class="container">
  <div class="row-fluid">
    <div class="row-fluid margin-bottom-20">
      <div class="span6">
       <div class="headline"><h3>All Shops</h3></div>
        <table class="table table-hover">
          <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Address</th>
              </tr>
          </thead>
          <tbody>
             <% @count=1 %>
             <% @shops.each do |shop| %>
              <tr>
                <td><%= @count %> </td>
                <td><%= shop.name %></td>
                <td><%= shop.address_id %></td>
                <td><%= link_to 'Show', shop %></td>
                <td><a class="glyphicons no-js edit" href=<%= edit_shop_path(shop) %>><i></i>Edit</a></td>
                <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% @count = @count+1 %>
            <% end %>
          </tbody>
        </table>
              <%= link_to 'New Shop', new_shop_path %>
      </div>
    </div>
  </div>
</div>
