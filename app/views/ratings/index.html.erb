<!--=== Content Part ===-->
<div class="body">
  <div class="breadcrumbs margin-bottom-50">
    <div class="container">
      <h1 class="color-green pull-left">Register</h1>
      <ul class="pull-right breadcrumb">
        <li><a href="index.html">Home</a> <span class="divider">/</span></li>
        <li class="active">Ratings</li>
      </ul>
    </div>
    <!--/container-->
  </div>
  <!--/breadcrumbs-->

  <div class="row-fluid">
    <div class="span6">
      <div class="headline"><h3>Listing Ratings</h3></div>
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Beer</th>
          <th>User</th>
          <th>Price</th>
          <th>Taste</th>
          <th>Headache</th>
          <th>Overall</th>
          <th>Comment</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @ratings.each do |rating| %>

            <% if (params[:beer_id].to_i == rating.beer_id.to_i) or !params[:beer_id]%>

                <tr>
                  <td><%= rating.beer.title %></td>
                  <td><%= rating.user.email %></td>
                  <td><%= rating.criterions.where(:name => "Price").first.value %>/10</td>
                  <td><%= rating.criterions.where(:name => "Taste").first.value %>/10</td>
                  <td><%= rating.criterions.where(:name => "Headache").first.value %>/10</td>
                  <td><%= rating.criterions.sum(:value)/3 %>/10</td>
                  <% if rating.comment.length > 15 %>
                      <td><%= rating.comment.slice!(0..15) %>...</td>
                  <% else %>
                      <td><%= rating.comment %></td>
                  <% end %>
                  <td><%= link_to 'Show', rating, data: {no_turbolink: true} %></td>
                  <td><%= link_to 'Edit', edit_rating_path(rating) %></td>
                  <td><%= link_to 'Destroy', rating, method: :delete, data: {confirm: 'Are you sure?'} %></td>
                </tr>
            <% end %>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <!--/row-fluid-->
</div>
